{;; Use deps.edn for dependency management (Clojure/ClojureScript deps)
 ;; Source paths are configured in deps.edn :paths (not here)
 :deps {:aliases [:dev]}

 ;; Development HTTP servers for live reload during development
 :dev-http {8081 "resources/public"
            8082 "resources/public/v2"
            8083 "resources/public/v3"
            8084 "resources/public/v4"}

 ;; Build configurations
 :builds
 {;; Mouse Tracker - Real-time mouse coordinate tracker with WebSocket
  :mouse-tracker
  {:target :browser
   :output-dir "resources/public/js"
   :asset-path "/js"
   :modules {:main {:init-fn clay.client.mouse-tracker/init!}}
   :devtools {:after-load clay.client.mouse-tracker/reload!
              :http-root "resources/public"
              :http-port 8081
              :preloads []}
   :compiler-options {:infer-externs :auto}
   :build-options {:manifest-name "manifest.edn"}}

  ;; Mouse Tracker v2 - Modern ClojureScript with Garden, js-interop, Replicant
  :mouse-tracker-v2
  {:target :browser
   :output-dir "resources/public/v2/js"
   :asset-path "/js"
   :modules {:main {:init-fn clay.client.mouse-tracker-v2/init!}}
   :devtools {:after-load clay.client.mouse-tracker-v2/reload!
              :http-root "resources/public/v2"
              :http-port 8082
              :preloads []}
   :compiler-options {:infer-externs :auto}
   :build-options {:manifest-name "manifest.edn"}}

  ;; Mouse Tracker v3 - Sente WebSocket communication
  :mouse-tracker-v3
  {:target :browser
   :output-dir "resources/public/v3/js"
   :asset-path "/js"
   :modules {:main {:init-fn clay.client.mouse-tracker-v3/init!}}
   :devtools {:after-load clay.client.mouse-tracker-v3/reload!
              :http-root "resources/public/v3"
              :http-port 8083
              :preloads []}
   :compiler-options {:infer-externs :auto}
   :build-options {:manifest-name "manifest.edn"}}

  ;; Mouse Tracker v4 - Bidirectional Clock Sync
  :mouse-tracker-v4
  {:target :browser
   :output-dir "resources/public/v4/js"
   :asset-path "/js"
   :modules {:main {:init-fn clay.client.mouse-tracker-v4/init!}}
   :devtools {:after-load clay.client.mouse-tracker-v4/reload!
              :http-root "resources/public/v4"
              :http-port 8084
              :preloads []}
   :compiler-options {:infer-externs :auto}
   :build-options {:manifest-name "manifest.edn"}}}

 ;; NOTE: The canvas2d test is available as a standalone HTML tool at:
 ;; resources/public/canvas2d-test.html (vanilla JS, not ClojureScript)
 }
