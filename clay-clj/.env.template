# .env.template
#
# Environment Variables Template
#
# This file contains shared environment variable definitions (committed to git)
# Copy this file to create your personal environment configuration:
#
#   cp .env.template .env        # For shared development settings
#   cp .env.template .env.local  # For personal/private settings (gitignored)
#
# Note: .env.local takes precedence over .env if both exist

# ============================================================================
# Server Configuration
# ============================================================================

# HTTP server port for the backend
# PORT=3000

# nREPL server port (if not using Launchpad's dynamic port)
# NREPL_PORT=7888


# ============================================================================
# Shadow-CLJS Configuration
# ============================================================================

# Shadow-CLJS HTTP ports (configured in shadow-cljs.edn but can override)
# SHADOW_CANVAS2D_PORT=8080
# SHADOW_MOUSE_TRACKER_PORT=8081


# ============================================================================
# WebSocket Configuration
# ============================================================================

# WebSocket server port for mouse tracker
# WS_PORT=8084

# WebSocket server host
# WS_HOST=localhost


# ============================================================================
# Development Tools
# ============================================================================

# Enable Portal data inspector
# PORTAL_ENABLED=true

# Log level (trace, debug, info, warn, error)
# LOG_LEVEL=info

# Enable verbose debug output
# DEBUG=true


# ============================================================================
# External Services (if needed)
# ============================================================================

# API endpoint URLs
# API_URL=http://localhost:3000/api

# Database connection (if applicable)
# DATABASE_URL=jdbc:postgresql://localhost:5432/kyano

# Authentication/API keys (never commit actual values!)
# API_KEY=your-api-key-here
# API_SECRET=your-api-secret-here


# ============================================================================
# Feature Flags
# ============================================================================

# Enable experimental features
# ENABLE_EXPERIMENTS=false

# Enable performance monitoring
# ENABLE_METRICS=false
